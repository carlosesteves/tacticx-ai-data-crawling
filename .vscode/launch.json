{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Python File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Run TM Data Fetch",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Run pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "tests"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}