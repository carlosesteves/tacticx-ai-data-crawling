{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Python File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Run TM Data Fetch",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Run pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "tests"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Update All Leagues Season (Input Year)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/update_all_leagues_season.py",
            "args": [
                "--season",
                "${input:seasonYear}"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ],
    "inputs": [
        {
            "id": "seasonYear",
            "type": "promptString",
            "description": "Enter the season year:",
            "default": "2025"
        }
    ]
}